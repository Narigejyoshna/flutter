import 'package:flutter/material.dart';

void main() {
  runApp(MyLayouts());
}

class MyLayouts extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(title: Text("Row, Column & Stack")),
        body: Column(
         
          children: [
            
            // Row Example
            Row(
              mainAxisAlignment: MainAxisAlignment.spaceEvenly,
              children: [
                Container(width: 50, height: 50, color: Colors.red),
                Container(width: 50, height: 50, color: Colors.green),
                Container(width: 50, height: 50, color: Colors.blue),
              ],
            ),

            SizedBox(height: 20),

            // Column Example
            Column(
              children: [
                Container(width: 100, height: 40, color: Colors.orange),
                SizedBox(height: 10),
                Container(width: 100, height: 40, color: Colors.purple),
              ],
            ),

            SizedBox(height: 20),

            // Stack Example
            Center(
              child: Stack(
                alignment: Alignment.center,
                children: [
                  Container(width: 150, height: 150, color: Colors.grey),
                  Container(width: 100, height: 100, color: Colors.black),
                  Text('stack',style:TextStyle(color:Colors.white))
                ],
              ),
            ),
          ],
        ),
      ),
    );
  }
}
3a
import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        body: LayoutBuilder(
          builder: (context, c) {
            double w = c.maxWidth;

            if (w < 600) {
              return Column(
                mainAxisAlignment: MainAxisAlignment.center,
                children: [
                  Text("Mobile", style: TextStyle(fontSize: 22)),
                  Container(width: 100, height: 100, color: Colors.blue),
                ],
              );
            }         
            else if (w < 1000) {
              return Row(               
                mainAxisAlignment: MainAxisAlignment.center,              
                children: [
                  Text("Tablet", style: TextStyle(fontSize: 22)),
                  SizedBox(width:40),
                  Container(width: 250, height: 150, color: Colors.green),
                ],
              );
            } else {
              return Row(
                mainAxisAlignment: MainAxisAlignment.spaceEvenly,
                children: [
                  Text("Desktop", style: TextStyle(fontSize: 22)),
                  Container(width: 300, height: 200, color: Colors.orange),
                  Container(width: 300, height: 200, color: Colors.red),
                ],
              );
            }
          },
        ),
      ),
    );
  }
}
3b
import 'package:flutter/material.dart';

void main() {
  runApp(const MediaQueryDemo());
}

class MediaQueryDemo extends StatelessWidget {
  const MediaQueryDemo({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        body: Builder(
          builder: (context) {
            double width = MediaQuery.of(context).size.width;
            return Center(
              child: Text(
                width < 600 ? "Mobile View" : "Tablet/Desktop View",
                style: const TextStyle(fontSize: 24),
              ),
            );
          },
        ),
      ),
    );
  }
}
4a
import 'package:flutter/material.dart';

void main() => runApp(MyApp());

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Screen1());
  }
}

class Screen1 extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: Center(
        child: ElevatedButton(
          child: Text("Next"),
          onPressed: () => Navigator.push(
            context,
            MaterialPageRoute(builder: (context) => Screen2()),
          ),
        ),
      ),
    );
  }
}

class Screen2 extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: Center(
        child: ElevatedButton(
          child: Text("Back"),
          onPressed: () => Navigator.pop(context),
        ),
      ),
    );
  }
}

4b
import 'package:flutter/material.dart';

void main() => runApp(MyApp());

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      initialRoute: '/',
      routes: {
        '/': (context) => Screen1(),
        '/second': (context) => Screen2(),
      },
    );
  }
}

class Screen1 extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: Center(
        child: ElevatedButton(
          child: Text("Go to Screen 2"),
          onPressed: () => Navigator.pushNamed(context, '/second'),
        ),
      ),
    );
  }
}

class Screen2 extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: Center(
        child: ElevatedButton(
          child: Text("Back"),
          onPressed: () => Navigator.pop(context),
        ),
      ),
    );
  }
}
